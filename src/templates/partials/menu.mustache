<ul>
{{#menuItems}}
  <li [class]="appState.site == '{{name}}' ? 'active m0' : 'm0'"
  class="active m0">
    <a class="caps text-decoration-none block p1 inactive"
      title="{{title}}"
      data-vars-section="{{name}}"
      on="tap:AMP.setState({ appState: { site: '{{name}}' }}),burger-menu.close(),greeting.scrollTo(position='bottom',duration=250)">{{name}}</a>
  </li>
{{/menuItems}}
</ul>
